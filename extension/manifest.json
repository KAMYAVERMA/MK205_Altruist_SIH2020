{
  "manifest_version": 2,
  "name": "Sign keyboard",
  "description": "it is a sign to text converter keyboard",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "extension.html"
  },

  "background": {
    "scripts": ["jquery-2.0.2.min.js", "background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.0.2.min.js", "extension.js"]
    }
  ],

  "permissions": ["activeTab"]
}
